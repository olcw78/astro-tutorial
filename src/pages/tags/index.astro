---
import BaseLayout from "../../layouts/BaseLayout.astro";

const allPosts = await Astro.glob("../posts/*.md");
const allSelectableTags = Array.from(
  new Set(
    allPosts.map((post) => post.frontmatter.tags).flat()
  )
);
---

<BaseLayout pageTitle="Tags Page">
    <ul class="tags">
      {allSelectableTags?.map((tag) =>
              <li class="tag">
                  <a href={`/tags/${tag}`}>{tag}</a>
              </li>
      )}
    </ul>
</BaseLayout>

<style>
    ul li {
        list-style: none;
    }

    ul li a {
        text-decoration: none;
        color: #00539f;
    }

    ul.tags {
        display: flex;
        flex-wrap: wrap;
        margin: 0 auto;
    }

    ul li.tag {
        margin: 0.25rem;
        border: solid 1px #a1a1a1;
        border-radius: .5em;
        padding: .5em 1em;
        font-size: 1.15em;
        background-color: #F8FCFD;
    }
</style>