---
const { platform, username } = Astro.props;
---

<a href={`https://${platform}.com/${username}`} target="_blank">
    <span>{platform}</span>
</a>

<style>
    a {
        padding: 0.5rem 1rem;
        margin-right: 0.5rem;
        color: white;
        border-radius: 7%;
        background-color: #4c1d95;
        text-decoration: none;
    }

    a span {
        font-size: 1rem;
    }

</style>